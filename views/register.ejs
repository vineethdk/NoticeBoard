<body>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card imageadd">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="text">First Name</label>
              <input type="text" class="form-control" name="fname">
            </div>

            <div class="form-group">
              <label for="text">Last Name</label>
              <input type="text" class="form-control" name="lname">
            </div>

            <div class="form-group">
              <label for="text">User Name</label>
              <input type="text" class="form-control" name="uname">
            </div>

            <div class="form-group">
              <label for="text">Staff id / USN</label>
              <input type="text" class="form-control" name="sid">
            </div>

            <div>
              <label for="dep">Department</label>
              <!-- <input type="text" id="dep" placeholder="department" value="" name="department" required> -->
              <select class="form-control" name="dname" id="department">
                <option value="ISE">ISE</option>
                <option value="CSE">CSE</option>
                <option value="TLE">TLE</option>
                <option value="ECE">ECE</option>
                <option value="EEE">EEE</option>
                <option value="CVE">CVE</option>
                <option value="ME">ME</option>
                <option value="ASE">ASE</option>
                <option value="BT">BT</option>
                <option value="IEM">IEM</option>
                <option value="CHE">CHE</option>
                <option value="EIE">EIE</option>
              </select>
            </div>
            <br />

            <!-- <div class="form-group">
              <label for="text">Department</label>
              <input type="text" class="form-control" name="dname">
            </div> -->

            <div class="form-group" id ="emaili">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" pattern="^[a-zA-Z0-9._-]+@[rvce]+\.[edu]+\.[in]{2}$" title="Please enter rvce mail id">
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input id="password" type="password" class="form-control" name="password">
              <meter max="4" id="password-strength-meter"></meter>
              <p id="password-strength-text"></p>


            </div>
            <button id = "but" type="submit" class="btn btn-dark">Send OTP</button>
          </form>

        </div>
      </div>
    </div>

    <!-- <div class="col-sm-4">
